#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="kafka_rest.base,nginx.rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES_PREVIOUS="conteco_dc_kafka_rest,conteco_dc_url_rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_kafka_rest,conteco_dc_kafka_rest_ext_rest"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_kafka_rest"
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_kafka_rest_ext_rest"
export CONTECO_DC_GLOBAL_VOLUME_LIST=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL='$CONTECO_DC_KAFKA_REST_PORTS,$CONTECO_DC_KAFKA_REST_EXT_REST_ENVIRONMENT_CONF_PATH,$CONTECO_DC_KAFKA_REST_EXT_REST_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_KAFKA_REST_EXT_REST_COMPOSE_EXTENSIONS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
export CONTECO_DC_KAFKA_REST_PORTS=
export CONTECO_DC_KAFKA_REST_EXT_REST_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_URLPREFIX}/rest"
export CONTECO_DC_KAFKA_REST_EXT_REST_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_STACKPREFIX}_kafka_rest:8082"
export CONTECO_DC_KAFKA_REST_EXT_REST_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, traefik.http.services.${DOLLAR}{CONTECO_STACKPREFIX}_nginx.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_nginx.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_nginx.rule=PathPrefix(\"/${DOLLAR}{CONTECO_URLPREFIX}/rest\")]
${DOLLAR}{CONTECO_DC_KAFKA_REST_EXT_REST_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export CONTECO_DC_KAFKA_REST_DEPLOY_MODE="replicated"
export CONTECO_DC_KAFKA_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KAFKA_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base
# START SETTINGS nginx.base
export CONTECO_DC_KAFKA_REST_EXT_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_KAFKA_REST_EXT_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

